{
  "description": "Collection of (search) facet, filter and sort elements",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/BrightspaceUILabs/facet-filter-sort.git"
  },
  "name": "@brightspace-ui-labs/facet-filter-sort",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "facet-filter-sort.serge.json",
    "custom-elements.json",
    "/components",
    "/lang"
  ],
  "scripts": {
    "lint": "npm run lint:eslint && npm run lint:lit && npm run lint:polymer && npm run lint:style",
    "lint:eslint": "eslint . --ext .js,.html",
    "lint:lit": "lit-analyzer \"{components, test, demo}/**/*.js\" --strict --rules.no-unknown-tag-name off",
    "lint:polymer": "polymer lint -i \"test/**/*.js\" \"demo/**/*.js\" \"components/**/*.js\"",
    "lint:style": "stylelint \"**/*.{js,html}\"",
    "start": "web-dev-server --node-resolve --watch --open --app-index demo/index.html",
    "test": "npm run lint && npm run test:headless",
    "test:headless": "web-test-runner --group default",
    "test:headless:watch": "web-test-runner --group default --watch"
  },
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7",
    "@babel/eslint-parser": "^7",
    "@brightspace-ui/stylelint-config": "^0.3",
    "@open-wc/testing": "^3",
    "@web/dev-server": "^0.1",
    "@web/test-runner": "^0.13",
    "@web/test-runner-saucelabs": "^0.6",
    "eslint": "^8",
    "eslint-config-brightspace": "^0.16",
    "eslint-plugin-html": "^6",
    "eslint-plugin-import": "^2",
    "eslint-plugin-lit": "^1",
    "eslint-plugin-sort-class-members": "^1",
    "lit-analyzer": "^1",
    "polymer-cli": "^1",
    "sinon": "^13",
    "stylelint": "^14"
  },
  "version": "5.0.0",
  "dependencies": {
    "@brightspace-ui/core": "^2",
    "d2l-localize-behavior": "BrightspaceUI/localize-behavior#semver:^2",
    "@brightspace-ui-labs/multi-select": "^6",
    "d2l-typography": "BrightspaceUI/typography#semver:^8",
    "lit-element": "^3",
    "lit-html": "^2",
    "@polymer/polymer": "^3"
  }
}
