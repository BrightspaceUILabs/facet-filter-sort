{
  "description": "Collection of (search) facet, filter and sort elements",
  "repository": {
    "type": "git",
    "url": "https://github.com/BrightspaceUILabs/facet-filter-sort.git"
  },
  "name": "@brightspace-ui-labs/facet-filter-sort",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "custom-elements.json",
    "/components"
  ],
  "scripts": {
    "lint": "npm run lint:eslint && npm run lint:lit && npm run lint:polymer && npm run lint:style",
    "lint:eslint": "eslint . --ext .js,.html",
    "lint:lit": "lit-analyzer \"{components, test, demo}/**/*.js\" --strict --rules.no-unknown-tag-name off",
    "lint:polymer": "polymer lint -i \"./*\" \"test\" \"demo\" \"components\"",
    "lint:style": "stylelint \"**/*.{js,html}\"",
    "test:polymer:local": "polymer test --skip-plugin sauce",
    "test:polymer:sauce": "polymer test --skip-plugin local",
    "test": "npm run lint && npm run test:polymer:local"
  },
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7",
    "@babel/eslint-parser": "^7",
    "@brightspace-ui/stylelint-config": "^0.3",
    "@polymer/iron-test-helpers": "^3",
    "eslint": "^8",
    "eslint-config-brightspace": "^0.16",
    "eslint-plugin-html": "^6",
    "eslint-plugin-import": "^2",
    "eslint-plugin-lit": "^1",
    "eslint-plugin-sort-class-members": "^1",
    "lit-analyzer": "^1",
    "polymer-cli": "^1",
    "stylelint": "^14",
    "wct-browser-legacy": "^1"
  },
  "version": "4.2.1",
  "dependencies": {
    "@brightspace-ui/core": "^1",
    "d2l-localize-behavior": "BrightspaceUI/localize-behavior#semver:^2",
    "@brightspace-ui-labs/multi-select": "^5",
    "d2l-polymer-behaviors": "Brightspace/d2l-polymer-behaviors-ui#semver:^2",
    "d2l-typography": "BrightspaceUI/typography#semver:^7",
    "lit-element": "^2",
    "@polymer/polymer": "^3"
  }
}
